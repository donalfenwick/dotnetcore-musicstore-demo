@model CreateGenreViewModel
@{
    ViewData["Title"] = "Add genre";
}

<h2>Add</h2>

<form asp-action="Add" asp-controller="Genre">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class=" col-md-2 col-form-label">Name</label>
        <div class="col-md-10">
            <input asp-for="@Model.Name" placeholder="Genre name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Add genre</button>
            <a asp-action="index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
