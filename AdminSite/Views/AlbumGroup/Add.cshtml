@model CreateAlbumGroupViewModel
@{
    ViewData["Title"] = "Add group";
}


<h2>Add album group</h2>


<form asp-action="Add" asp-controller="AlbumGroup" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Key" class=" col-md-2 col-form-label">Key</label>
        <div class="col-md-10">
            <input asp-for="Key" placeholder="Group key" />
            <span asp-validation-for="Key" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class=" col-md-2 col-form-label">Name</label>
        <div class="col-md-10">
            <input asp-for="Name" placeholder="Group name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary">Add group</button>
            <a asp-action="index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>


